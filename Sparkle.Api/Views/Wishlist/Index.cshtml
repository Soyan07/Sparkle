@model IEnumerable<Sparkle.Domain.Users.UserWishlistItem>
@{
    ViewData["Title"] = "My Wishlist";
    Layout = "~/Views/Profile/_ProfileLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">My Wishlist</h4>
    <span class="badge bg-secondary rounded-pill">@Model.Count() Items</span>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="display-1 text-muted mb-3"><i class="bi bi-heart"></i></div>
        <h5>Your wishlist is empty</h5>
        <p class="text-muted mb-4">Save items you love for later.</p>
        <a href="/" class="btn btn-primary">Start Shopping</a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="row g-0 h-100">
                        <div class="col-4 position-relative">
                            @{
                                var imagePath = item.Product.Images.FirstOrDefault()?.ImagePath ?? "/images/placeholder.jpg";
                            }
                            <img src="@imagePath" class="img-fluid rounded-start h-100 object-fit-cover" alt="@item.Product.Name">
                            
                            @if (item.Product.Price < item.PriceWhenAdded)
                            {
                                <span class="position-absolute top-0 start-0 badge bg-success m-2">Price Drop!</span>
                            }
                        </div>
                        <div class="col-8">
                            <div class="card-body d-flex flex-column h-100">
                                <h5 class="card-title text-truncate">@item.Product.Name</h5>
                                <div class="mb-2">
                                    <span class="fw-bold text-primary fs-5">৳@item.Product.Price</span>
                                    @if (item.Product.OldPrice > item.Product.Price)
                                    {
                                        <small class="text-decoration-line-through text-muted ms-2">৳@item.Product.OldPrice</small>
                                    }
                                </div>
                                <p class="card-text small text-muted mb-3">
                                    Added on @item.AddedAt.ToString("MMM dd, yyyy")
                                </p>
                                
                                <div class="mt-auto d-flex gap-2">
                                    <button class="btn btn-sm btn-primary flex-grow-1">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                    <form method="post" asp-action="Remove" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
