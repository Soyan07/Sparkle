@model Sparkle.Api.Controllers.CategoryController.CategoryViewModel
@{
    var langCookie = Context.Request.Cookies["sparkle-lang"] == "bn" ? "bn" : "en";
    var isBangla = langCookie == "bn";
    ViewData["Title"] = Model.Category.Name;
}

<style>
    /* ============================================
       CATEGORY HEADER - Modern gradient banner
       ============================================ */
    .category-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .category-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.3;
    }

    .category-title {
        font-size: 2.2rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .category-count {
        font-size: 1.1rem;
        opacity: 0.95;
        margin-top: 0.5rem;
        position: relative;
        z-index: 1;
    }

    /* ============================================
       FILTERS BAR - Clean and modern
       ============================================ */
    .filters-bar {
        background: white;
        padding: 1.25rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(0, 0, 0, 0.06);
    }

    .sort-select {
        border: 2px solid #e5e7eb;
        padding: 0.65rem 1.25rem;
        border-radius: 8px;
        font-size: 0.95rem;
        background: white;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .sort-select:focus {
        border-color: #667eea;
        outline: none;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    /* ============================================
       PRODUCT GRID - Responsive and optimized
       ============================================ */
    /* Grid styling handled by Bootstrap row-cols classes */

    .product-card {
        background: white;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
    }

    .product-card:hover {
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        transform: translateY(-8px);
    }

    .product-image-wrapper {
        position: relative;
        width: 100%;
        height: 220px;
        overflow: hidden;
        background: #f9fafb;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.08);
    }

    .product-discount-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 700;
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        z-index: 2;
    }

    .product-star-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        z-index: 2;
    }

    .product-info {
        padding: 1.25rem;
    }

    .product-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #2d2d2d;
        margin-bottom: 0.75rem;
        height: 2.8rem;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        line-height: 1.4;
    }

    .product-price {
        font-size: 1.4rem;
        font-weight: 700;
        color: #dc2626;
        margin-bottom: 0.5rem;
    }

    .product-original-price {
        text-decoration: line-through;
        color: #9ca3af;
        font-size: 0.9rem;
        margin-left: 0.5rem;
        font-weight: 500;
    }

    .product-rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.75rem;
        font-size: 0.85rem;
        color: #6b7280;
    }

    .product-rating .stars {
        color: #f59e0b;
        font-weight: 600;
    }

    .product-delivery {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        color: #10b981;
        font-weight: 500;
    }

    /* ============================================
       CATEGORY HIGHLIGHT CARD - Feature banner
       ============================================ */
    .category-highlight-card {
        background: linear-gradient(120deg, #f0f9ff 0%, #e0f2fe 100%);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 8px 24px rgba(56, 189, 248, 0.12);
        margin-bottom: 2rem;
        display: flex;
        gap: 2rem;
        align-items: center;
        border: 1px solid rgba(56, 189, 248, 0.2);
    }

    .category-highlight-icon {
        width: 80px;
        height: 80px;
        border-radius: 16px;
        background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.2rem;
        color: white;
        box-shadow: 0 8px 20px rgba(14, 165, 233, 0.25);
        flex-shrink: 0;
    }

    .category-highlight-body h3 {
        margin: 0 0 0.5rem;
        font-weight: 700;
        font-size: 1.5rem;
        color: #0c4a6e;
    }

    .category-highlight-body p {
        margin: 0 0 1rem;
        color: #475569;
        font-size: 1rem;
    }

    .category-highlight-points {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 0.75rem 1.5rem;
    }

    .category-highlight-points li {
        font-size: 0.95rem;
        color: #334155;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
    }

    .category-highlight-points i {
        color: #0ea5e9;
        font-size: 1.1rem;
    }

    /* ============================================
       PAGINATION - Modern design
       ============================================ */
    .pagination {
        gap: 0.5rem;
    }

    .pagination .page-item .page-link {
        border-radius: 8px;
        border: 2px solid #e5e7eb;
        color: #4b5563;
        font-weight: 600;
        padding: 0.65rem 1rem;
        transition: all 0.3s ease;
    }

    .pagination .page-item.active .page-link {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: #667eea;
        color: white;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .pagination .page-item .page-link:hover {
        background: #f3f4f6;
        border-color: #667eea;
        transform: translateY(-2px);
    }

    .pagination .page-item.active .page-link:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        transform: translateY(-2px);
    }

    /* ============================================
       EMPTY STATE - Friendly messaging
       ============================================ */
    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .empty-state i {
        font-size: 5rem;
        color: #d1d5db;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 0.75rem;
    }

    .empty-state p {
        color: #6b7280;
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    /* ============================================
       RESPONSIVE DESIGN
       ============================================ */
    @@media (max-width: 768px) {
        .product-grid {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 1rem;
        }

        .product-image-wrapper {
            height: 200px;
        }

        .category-highlight-card {
            flex-direction: column;
            align-items: flex-start;
            padding: 1.5rem;
        }

        .category-highlight-icon {
            width: 64px;
            height: 64px;
            font-size: 1.75rem;
        }

        .category-title {
            font-size: 1.75rem;
        }

        .category-header {
            padding: 2rem 0;
        }
    }
</style>

<div class="category-header">
    <div class="container">
        <h1 class="category-title">@Model.Category.Name</h1>
        <p class="mb-0">
            @Model.Products.Count @(isBangla ? "টি পণ্য পাওয়া গেছে" : "products found")
        </p>
    </div>
</div>

<div class="container mb-5">
    @if (Model.Highlight is not null)
    {
        <div class="category-highlight-card">
            <div class="category-highlight-icon">
                <i class="@Model.Highlight.Icon"></i>
            </div>
            <div class="category-highlight-body w-100">
                <h3 class="mb-1">@Model.Highlight.Title</h3>
                <p>@Model.Highlight.Description</p>
                <ul class="category-highlight-points">
                    @foreach (var bullet in Model.Highlight.BulletPoints)
                    {
                        <li><i class="bi bi-check-circle-fill"></i> @bullet</li>
                    }
                </ul>
            </div>
        </div>
    }

    <div class="filters-bar">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>@Model.Products.Count</strong> @(isBangla ? "টি পণ্য" : "products")
            </div>
            <div>
                <label class="me-2">@(isBangla ? "সাজান:" : "Sort by:")</label>
                <select class="sort-select" onchange="window.location.href='/category/@Model.Category.Slug?sort='+this.value+'&page=@Model.CurrentPage'">
                    <option value="">@(isBangla ? "নতুন প্রথমে" : "Newest first")</option>

                    @if (Model.CurrentSort == "price-asc")
                    {
                        <option value="price-asc" selected>@(isBangla ? "মূল্য: কম থেকে বেশি" : "Price: Low to High")</option>
                    }
                    else
                    {
                        <option value="price-asc">@(isBangla ? "মূল্য: কম থেকে বেশি" : "Price: Low to High")</option>
                    }

                    @if (Model.CurrentSort == "price-desc")
                    {
                        <option value="price-desc" selected>@(isBangla ? "মূল্য: বেশি থেকে কম" : "Price: High to Low")</option>
                    }
                    else
                    {
                        <option value="price-desc">@(isBangla ? "মূল্য: বেশি থেকে কম" : "Price: High to Low")</option>
                    }

                    @if (Model.CurrentSort == "name")
                    {
                        <option value="name" selected>@(isBangla ? "নাম অনুসারে" : "Name (A-Z)")</option>
                    }
                    else
                    {
                        <option value="name">@(isBangla ? "নাম অনুসারে" : "Name (A-Z)")</option>
                    }
                </select>
            </div>
        </div>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>@(isBangla ? "এই বিভাগে কোনো পণ্য নেই" : "No products in this category")</h3>
            <p>@(isBangla ? "শীঘ্রই নতুন পণ্য যুক্ত করা হবে!" : "New products will be added soon!")</p>
            <a href="/" class="btn btn-primary btn-lg px-4">@(isBangla ? "হোমপেজে ফিরে যান" : "Back to Homepage")</a>
        </div>
    }
    else
    {
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3 g-lg-4">
            @foreach (var product in Model.Products)
            {
                var imageUrl = product.Images?.FirstOrDefault()?.Url ?? "https://via.placeholder.com/300x300?text=No+Image";
                var discountPrice = product.DiscountPercent.HasValue 
                    ? product.BasePrice * (1 - product.DiscountPercent.Value / 100) 
                    : product.BasePrice;
                
                <div class="col">
                    <div class="product-card" onclick="window.location.href='/home/product/@product.Id'">
                    <div class="product-image-wrapper">
                        <img src="@imageUrl" alt="@product.Title" class="product-image" loading="lazy">
                        
                        @if (product.DiscountPercent.HasValue && product.DiscountPercent.Value > 0)
                        {
                            <span class="product-discount-badge">
                                <i class="bi bi-lightning-fill"></i> -@product.DiscountPercent.Value%
                            </span>
                        }
                        
                        @if (product.IsAdminProduct)
                        {
                            <span class="product-star-badge">
                                <i class="bi bi-star-fill"></i>
                            </span>
                        }
                    </div>
                    
                    <div class="product-info">
                        <div class="product-title">@product.Title</div>
                        <div>
                            <span class="product-price">৳ @discountPrice.ToString("N0")</span>
                            @if (product.DiscountPercent.HasValue && product.DiscountPercent.Value > 0)
                            {
                                <span class="product-original-price">৳ @product.BasePrice.ToString("N0")</span>
                            }
                        </div>
                        <div class="product-rating">
                            <span class="stars">
                                <i class="bi bi-star-fill"></i> @(product.AverageRating > 0 ? product.AverageRating.ToString("F1") : "4.5")
                            </span>
                            <span>•</span>
                            <span class="product-delivery">
                                <i class="bi bi-truck"></i> @(isBangla ? "ফ্রি ডেলিভারি" : "Free Delivery")
                            </span>
                        </div>
                    </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/category/@Model.Category.Slug?page=@(Model.CurrentPage - 1)&sort=@Model.CurrentSort">
                                @(isBangla ? "পূর্ববর্তী" : "Previous")
                            </a>
                        </li>
                    }
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="/category/@Model.Category.Slug?page=@i&sort=@Model.CurrentSort">@i</a>
                        </li>
                    }
                    
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/category/@Model.Category.Slug?page=@(Model.CurrentPage + 1)&sort=@Model.CurrentSort">
                                @(isBangla ? "পরবর্তী" : "Next")
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
