@model Sparkle.Api.Controllers.SettingsController.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
    Layout = "_ProfileLayout";
    var isBangla = Model.Language == "bn";
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<style>
    .settings-page {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: calc(100vh - 430px);
        padding: 2rem 0 3rem;
    }

    .settings-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #ffffff;
        border-radius: 20px;
        padding: 3rem 2.5rem;
        margin-bottom: 2.5rem;
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.35);
        position: relative;
        overflow: hidden;
    }

    .settings-hero::after {
        content: '';
        position: absolute;
        inset: 15px;
        border-radius: 18px;
        border: 1px solid rgba(255, 255, 255, 0.25);
        pointer-events: none;
    }

    .settings-hero h1 {
        font-size: 2.8rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .settings-hero p {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.95);
        max-width: 700px;
        line-height: 1.6;
    }

    .settings-hero .hero-actions {
        margin-top: 1.5rem;
    }

    .settings-hero .hero-actions .btn {
        font-weight: 600;
    }

    .settings-columns {
        gap: 1.5rem;
    }

    .settings-nav {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.1);
        border: 1px solid #e2e8f0;
        position: sticky;
        top: 20px;
    }

    .settings-nav button {
        width: 100%;
        text-align: left;
        border: none;
        background: transparent;
        padding: 1rem 1.25rem;
        font-weight: 600;
        color: #475569;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .settings-nav button:hover {
        background: #f8f9fa;
        color: #667eea;
        transform: translateX(5px);
    }

    .settings-nav button.active {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .settings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .settings-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid #e2e8f0;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

    .settings-card:hover {
        box-shadow: 0 15px 40px rgba(15, 23, 42, 0.12);
        transform: translateY(-4px);
    }

    .settings-card h3 {
        font-size: 1.15rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #1e293b;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .settings-card p {
        color: #64748b;
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .settings-card .btn-group .btn {
        border-radius: 999px;
        font-weight: 600;
        padding: 0.65rem 1.25rem;
    }

    .notification-toggle {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.7rem;
    }

    .notification-toggle label {
        font-size: 0.95rem;
        color: #1e293b;
        margin-bottom: 0;
    }

    .notification-toggle input[type="checkbox"] {
        width: 38px;
        height: 20px;
        appearance: none;
        border-radius: 999px;
        background: #d1d5db;
        position: relative;
        transition: background 0.3s ease;
        outline: none;
        cursor: pointer;
    }

    .notification-toggle input[type="checkbox"]::after {
        content: '';
        position: absolute;
        top: 2px;
        left: 2px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: white;
        transition: transform 0.3s ease;
    }

    .notification-toggle input[type="checkbox"]:checked {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .notification-toggle input[type="checkbox"]:checked::after {
        transform: translateX(18px);
    }

    .settings-meta {
        font-size: 0.9rem;
        color: #64748b;
        margin-top: 1rem;
    }

    .settings-summary {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .settings-summary .summary-card {
        flex: 1 1 260px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 14px;
        border: none;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .summary-label {
        font-size: 0.75rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.65);
    }

    .summary-value {
        font-size: 1.75rem;
        font-weight: 700;
        margin-top: 0.3rem;
    }

    @@media (max-width: 991px) {
        .settings-columns {
            flex-direction: column;
        }
        
        .settings-nav {
            position: static;
            margin-bottom: 2rem;
        }
        
        .settings-nav button {
            padding: 0.85rem 1rem;
        }
    }
    
    @@media (max-width: 768px) {
        .settings-hero {
            padding: 2rem 1.5rem;
        }
        
        .settings-hero h1 {
            font-size: 2rem;
        }
        
        .settings-hero p {
            font-size: 1rem;
        }
        
        .settings-card {
            padding: 1.5rem;
        }
        
        .settings-nav button {
            font-size: 0.9rem;
        }
    }
</style>

<div class="settings-page">
    <div class="container">
        <div class="settings-hero">
            <h1 class="sparkle-section-title">
                @(isBangla ? "কাস্টমাইজ আপনার ই-কমার্স" : "Personalize your Sparkle experience")
            </h1>
            <p>
                @(isBangla
                    ? "এক জায়গায় ভাষা, নোটিফিকেশন আর নিরাপত্তার সেটিংস ঠিক করুন।"
                    : "Manage language, security, notifications, and delivery preferences just like you would in Amazon.")
            </p>
            <div class="hero-actions">
                <a href="/orders" class="btn btn-light me-2">@(isBangla ? "আমার অর্ডারসমূহ" : "View Orders")</a>
                <a href="/auth/login" class="btn btn-outline-light">@(isBangla ? "অ্যাকাউন্ট সেটিংস" : "Account Settings")</a>
            </div>
        </div>

        <div class="row settings-columns">
            <div class="col-lg-3">
                <div class="settings-nav">
                    <button class="active" onclick="showSettingsTab('language')">
                        <i class="bi bi-translate"></i>
                        <span>@(isBangla ? "ভাষা" : "Language")</span>
                    </button>
                    <button onclick="showSettingsTab('security')">
                        <i class="bi bi-shield-lock"></i>
                        <span>@(isBangla ? "নিরাপত্তা" : "Security")</span>
                    </button>
                    <button onclick="showSettingsTab('notifications')">
                        <i class="bi bi-bell"></i>
                        <span>@(isBangla ? "নোটিফিকেশন" : "Notifications")</span>
                    </button>
                    <button onclick="showSettingsTab('delivery')">
                        <i class="bi bi-truck"></i>
                        <span>@(isBangla ? "ডেলিভারি" : "Delivery")</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="settings-grid">
                    <div class="settings-card" data-tab="language">
                        <h3>
                            <i class="bi bi-translate"></i>
                            @(isBangla ? "ভাষা অগ্রাধিকার" : "Language Preference")
                        </h3>
                        <p>
                            @(isBangla
                                ? "স্পার্কল সাইটের ভাষা নির্বাচন করুন এবং আপনার প্রোফাইলের জন্য কুকি সেভ করুন।"
                                : "Set the language you prefer for the entire Sparkle experience. We remember this choice in your browser.")
                        </p>

                        <form asp-action="ChangeLanguage" asp-controller="Settings" method="post" class="mt-4">
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            <div class="btn-group btn-group-lg w-100" role="group" aria-label="Language toggle">
                                <input type="radio" class="btn-check" name="language" id="lang-en" value="en" @(Model.Language == "en" ? "checked" : "") />
                                <label class="btn btn-outline-secondary w-50" for="lang-en">English</label>
                                <input type="radio" class="btn-check" name="language" id="lang-bn" value="bn" @(Model.Language == "bn" ? "checked" : "") />
                                <label class="btn btn-outline-secondary w-50" for="lang-bn">বাংলা</label>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 mt-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; font-weight: 600; padding: 0.75rem;">
                                <i class="bi bi-save me-1"></i>
                                @(isBangla ? "ভাষা সংরক্ষণ" : "Save Language")
                            </button>
                            <div class="settings-meta">
                                <i class="bi bi-info-circle me-1"></i>
                                @(isBangla
                                    ? "আপনার পছন্দটি কুকিতে সেভ করে রাখি এবং পরবর্তী ভিজিটে স্বয়ংক্রিয়ভাবে লোড করি।"
                                    : "We store this preference in a cookie and automatically reload it next visit.")
                            </div>
                        </form>
                    </div>

                    <div class="settings-card" data-tab="security">
                        <h3>
                            <i class="bi bi-shield-lock"></i>
                            @(isBangla ? "নিরাপত্তা কেন্দ্র" : "Security Center")
                        </h3>
                        <p>
                            @(isBangla
                                ? "পাসওয়ার্ড, ডু-ফ্যাক্টর ও লগইন ডিভাইস ম্যানেজ করুন।"
                                : "Review sign-in devices, change passwords, and enable multi-factor auth for peace of mind.")
                        </p>
                        <div class="mt-3">
                            <button type="button" class="btn btn-outline-primary w-100 mb-2" style="border-width: 2px; font-weight: 600;">
                                <i class="bi bi-key me-2"></i>Change Password
                            </button>
                            <button type="button" class="btn btn-outline-primary w-100" style="border-width: 2px; font-weight: 600;">
                                <i class="bi bi-phone me-2"></i>Manage Devices
                            </button>
                        </div>
                    </div>

                    <div class="settings-card" data-tab="notifications">
                        <h3>
                            <i class="bi bi-bell"></i>
                            @(isBangla ? "নোটিফিকেশন" : "Notifications")
                        </h3>
                        <div class="notification-toggle">
                            <label>@(isBangla ? "অর্ডার আপডেটস" : "Order Updates")</label>
                            <input type="checkbox" checked />
                        </div>
                        <div class="notification-toggle">
                            <label>@(isBangla ? "প্রোমো অফার" : "Promotional Offers")</label>
                            <input type="checkbox" />
                        </div>
                        <div class="notification-toggle">
                            <label>@(isBangla ? "পেমেন্ট ব্যালেন্স" : "Payment Alerts")</label>
                            <input type="checkbox" checked />
                        </div>
                    </div>

                    <div class="settings-card" data-tab="delivery">
                        <h3>
                            <i class="bi bi-truck"></i>
                            @(isBangla ? "ডেলিভারি ও পেমেন্ট" : "Delivery & Payment")
                        </h3>
                        <p>
                            @(isBangla
                                ? "প্রিয় শিপিং ঠিকানা, ডেলিভারি সময় ও পেমেন্ট পদ্ধতি সব এক জায়গায় দেখুন।"
                                : "Quick glance at your preferred shipping address, delivery slots, and saved payment methods.")
                        </p>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Dhaka 1212</strong> • @(isBangla ? "পরিমানিত ডেলিভারি" : "Scheduled Delivery")</li>
                            <li>bKash • @(isBangla ? "প্রাধান্যপ্রাপ্ত পেমেন্ট" : "Preferred Payment")</li>
                        </ul>
                    </div>
                </div>
                <div class="settings-summary">
                    <div class="summary-card">
                        <div class="summary-label">@(isBangla ? "সাহায্য" : "Need help?")</div>
                        <div class="summary-value">24/7</div>
                        <p class="mt-2">@(isBangla ? "কাস্টমার সার্ভিস" : "Customer Service")</p>
                    </div>
                    <div class="summary-card">
                        <div class="summary-label">@(isBangla ? "রক্ষণাবেক্ষণ" : "Preferred")</div>
                        <div class="summary-value">98%</div>
                        <p class="mt-2">@(isBangla ? "অভিজ্ঞতা রেটিং" : "Experience Score")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Settings tab navigation
    function showSettingsTab(tabName) {
        // Update active button
        document.querySelectorAll('.settings-nav button').forEach(btn => {
            btn.classList.remove('active');
        });
        event.target.closest('button').classList.add('active');
        
        // Show/hide cards based on tab
        document.querySelectorAll('.settings-card').forEach(card => {
            const cardTab = card.getAttribute('data-tab');
            if (cardTab === tabName) {
                card.style.display = 'block';
                card.style.animation = 'fadeInUp 0.4s ease-out';
            } else {
                card.style.display = 'none';
            }
        });
    }
    
    // Animation keyframes
    const style = document.createElement('style');
    style.textContent = `
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    `;
    document.head.appendChild(style);
    
    // Initialize - show only language cards on load
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.settings-card').forEach(card => {
            const cardTab = card.getAttribute('data-tab');
            if (cardTab !== 'language') {
                card.style.display = 'none';
            }
        });
    });
</script>
