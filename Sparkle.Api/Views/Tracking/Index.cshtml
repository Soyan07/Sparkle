@{
    ViewData["Title"] = "Track Your Shipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Header -->
            <div class="text-center mb-5">
                <i class="bi bi-box-seam" style="font-size: 4rem; color: #0d6efd;"></i>
                <h1 class="mt-3">Track Your Shipment</h1>
                <p class="text-muted">Enter your tracking number or shipment number to track your order</p>
            </div>

            <!-- Error Message -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Tracking Form -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="get" action="@Url.Action("Track")">
                        <div class="mb-3">
                            <label for="trackingNumber" class="form-label">Tracking Number</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="trackingNumber" 
                                   name="number" 
                                   placeholder="e.g., PATH123456 or SHP-20251122-000001"
                                   required
                                   autofocus>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                You can find your tracking number in the order confirmation email
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-search me-2"></i>Track Shipment
                        </button>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card mt-4 bg-light border-0">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-question-circle me-2"></i>Need Help?</h6>
                    <ul class="mb-0 small">
                        <li>Tracking numbers are provided when your order is shipped</li>
                        <li>It may take a few hours for tracking information to appear</li>
                        <li>Check your email for shipping confirmation with tracking details</li>
                        <li>For assistance, contact our <a href="@Url.Action("Index", "Contact")">customer support</a></li>
                    </ul>
                </div>
            </div>

            <!-- Courier Links -->
            <div class="text-center mt-4">
                <p class="text-muted small mb-2">Track directly on courier websites:</p>
                <div class="d-flex justify-content-center gap-2 flex-wrap">
                    <a href="https://pathao.com/track" target="_blank" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Pathao
                    </a>
                    <a href="https://steadfast.com.bd/track" target="_blank" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Steadfast
                    </a>
                    <a href="https://redx.com.bd/track" target="_blank" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Redx
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .form-control-lg {
        font-size: 1.1rem;
        padding: 12px;
    }
</style>
