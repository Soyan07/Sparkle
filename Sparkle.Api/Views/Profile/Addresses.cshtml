@model List<Sparkle.Domain.Users.UserAddress>
@{
    ViewData["Title"] = "Your Addresses";
    Layout = "_ProfileLayout";
}

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">Your Addresses</h4>
            <a href="/profile/addresses/create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add Address
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-geo-alt" style="font-size: 3rem;"></i>
                <p class="mt-3">No addresses saved yet.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var address in Model)
                {
                    <div class="col-md-6">
                        <div class="card h-100 @(address.IsDefault ? "border-primary" : "")">
                            <div class="card-body position-relative">
                                @if (address.IsDefault)
                                {
                                    <span class="badge bg-primary position-absolute top-0 end-0 m-3">Default</span>
                                }
                                <h5 class="card-title">@address.FullName</h5>
                                <p class="card-text mb-1">@address.AddressLine1</p>
                                <p class="card-text mb-1">@address.City, @address.PostalCode</p>
                                <p class="card-text mb-1">@address.Country</p>
                                <p class="card-text text-muted small mt-2">Phone: @address.PhoneNumber</p>
                                
                                <div class="mt-3 pt-3 border-top">
                                    <a href="#" class="text-primary me-3">Edit</a>
                                    <a href="#" class="text-danger">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
