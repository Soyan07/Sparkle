@{
    ViewData["Title"] = "More Options";
    Layout = "_ProfileLayout";
    var langCookie = Context.Request.Cookies["sparkle-lang"] == "bn" ? "bn" : "en";
    var isBangla = langCookie == "bn";
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-4">
        <h4 class="mb-4">Language Settings</h4>
        
        <form asp-action="ChangeLanguage" asp-controller="Home" method="post">
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="language" id="lang-en" value="en" @(langCookie == "en" ? "checked" : "") onchange="this.form.submit()" />
                <label class="btn btn-outline-secondary" for="lang-en">English</label>
                
                <input type="radio" class="btn-check" name="language" id="lang-bn" value="bn" @(langCookie == "bn" ? "checked" : "") onchange="this.form.submit()" />
                <label class="btn btn-outline-secondary" for="lang-bn">বাংলা</label>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <h4 class="mb-4">More Settings</h4>

        <div class="list-group list-group-flush">
            <div class="list-group-item py-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1"><i class="bi bi-bell me-2"></i> Communication Preferences</h6>
                        <p class="mb-0 text-muted small">Manage email subscriptions and SMS notifications.</p>
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-secondary">Manage</a>
                </div>
            </div>
            <div class="list-group-item py-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1"><i class="bi bi-shield-lock me-2"></i> Data & Privacy</h6>
                        <p class="mb-0 text-muted small">Request your data or update marketing consents.</p>
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
            </div>
            <div class="list-group-item py-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1"><i class="bi bi-arrow-counterclockwise me-2"></i> Returns & Exchanges</h6>
                        <p class="mb-0 text-muted small">Initiate a return or check return status.</p>
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-secondary">Start Return</a>
                </div>
            </div>
            <div class="list-group-item py-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-danger"><i class="bi bi-trash me-2"></i> Delete Account</h6>
                        <p class="mb-0 text-muted small">Permanently close your account and delete data.</p>
                    </div>
                    <a href="#" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
