@model Sparkle.Domain.Orders.Order
@{
    var langCookie = Context.Request.Cookies["sparkle-lang"] == "bn" ? "bn" : "en";
    var isBangla = langCookie == "bn";
    ViewData["Title"] = (isBangla ? "অর্ডার বিস্তারিত #" : "Order Details #") + Model.Id;
}

<div class="container my-4">
    <div class="mb-4">
        <a href="/orders" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> @(isBangla ? "অর্ডার লিস্টে ফিরে যান" : "Back to Orders")
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt"></i>
                        @(isBangla ? "অর্ডার আইটেম" : "Order Items")
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@item.ProductTitle</h6>
                                <p class="text-muted mb-1 small">
                                    @(isBangla ? "দাম:" : "Price:") ৳ @item.UnitPrice.ToString("N0") × @item.Quantity
                                </p>
                            </div>
                            <div class="text-end">
                                <strong class="text-success">৳ @item.TotalPrice.ToString("N0")</strong>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i>
                        @(isBangla ? "অর্ডার তথ্য" : "Order Information")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">@(isBangla ? "অর্ডার নং" : "Order ID")</small>
                        <h6>#@Model.Id</h6>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">@(isBangla ? "তারিখ" : "Date")</small>
                        <h6>@Model.CreatedAt.ToString("dd MMMM yyyy, hh:mm tt")</h6>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">@(isBangla ? "স্ট্যাটাস" : "Status")</small>
                        <h6>
                            <span class="badge bg-@(Model.Status switch {
                                Sparkle.Domain.Orders.OrderStatus.Pending => "warning",
                                Sparkle.Domain.Orders.OrderStatus.Processing => "info",
                                Sparkle.Domain.Orders.OrderStatus.Shipped => "primary",
                                Sparkle.Domain.Orders.OrderStatus.Delivered => "success",
                                Sparkle.Domain.Orders.OrderStatus.Cancelled => "danger",
                                _ => "secondary"
                            })">
                                @Model.Status.ToString()
                            </span>
                        </h6>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">@(isBangla ? "পেমেন্ট" : "Payment")</small>
                        <h6>
                            <span class="badge bg-@(Model.PaymentStatus == Sparkle.Domain.Orders.PaymentStatus.Paid ? "success" : "warning")">
                                @Model.PaymentStatus.ToString()
                            </span>
                        </h6>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ShippingFullName))
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-geo-alt"></i>
                            @(isBangla ? "ডেলিভারি ঠিকানা" : "Delivery Address")
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-1"><strong>@Model.ShippingFullName</strong></p>
                        <p class="mb-1">@Model.ShippingPhone</p>
                        <p class="mb-1">@Model.ShippingAddressLine1</p>
                        <p class="mb-1">@Model.ShippingArea, @Model.ShippingCity</p>
                        <p class="mb-0">@Model.ShippingPostalCode</p>
                    </div>
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calculator"></i>
                        @(isBangla ? "মোট হিসাব" : "Order Summary")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>@(isBangla ? "সাবটোটাল" : "Subtotal")</span>
                        <strong>৳ @Model.SubTotal.ToString("N0")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>@(isBangla ? "ডেলিভারি চার্জ" : "Delivery")</span>
                        <strong>৳ @Model.ShippingCost.ToString("N0")</strong>
                    </div>
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="d-flex justify-content-between mb-2 text-success">
                            <span>@(isBangla ? "ডিসকাউন্ট" : "Discount")</span>
                            <strong>-৳ @Model.DiscountAmount.ToString("N0")</strong>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between">
                        <h5>@(isBangla ? "মোট" : "Total")</h5>
                        <h5 class="text-success">৳ @Model.TotalAmount.ToString("N0")</h5>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a href="/orders/track/@Model.Id" class="btn btn-primary w-100">
                    <i class="bi bi-truck"></i> @(isBangla ? "অর্ডার ট্র্যাক করুন" : "Track Order")
                </a>
            </div>
        </div>
    </div>
</div>
