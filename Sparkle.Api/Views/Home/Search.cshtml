@model IEnumerable<Sparkle.Domain.Catalog.Product>
@{
    var langCookie = Context.Request.Cookies["sparkle-lang"] == "bn" ? "bn" : "en";
    var isBangla = langCookie == "bn";
    ViewData["Title"] = isBangla ? "সার্চ রেজাল্ট" : "Search Results";
}

<style>
    .search-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2.5rem 0;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .search-header::before {
        content: '';
        position: absolute;
        inset: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.3;
    }

    .search-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .search-query {
        font-size: 1.1rem;
        opacity: 0.95;
        margin-top: 0.5rem;
        position: relative;
        z-index: 1;
    }

    /* Grid styling handled by Bootstrap row-cols classes */

    .search-product-card {
        background: white;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .search-product-card:hover {
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        transform: translateY(-8px);
    }

    .search-image-wrapper {
        position: relative;
        width: 100%;
        height: 220px;
        overflow: hidden;
        background: #f9fafb;
    }

    .search-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .search-product-card:hover .search-image {
        transform: scale(1.08);
    }

    .search-discount-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 700;
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        z-index: 2;
    }

    .search-product-info {
        padding: 1.25rem;
    }

    .search-product-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #2d2d2d;
        margin-bottom: 0.75rem;
        height: 2.8rem;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        line-height: 1.4;
    }

    .search-product-price {
        font-size: 1.4rem;
        font-weight: 700;
        color: #dc2626;
        margin-bottom: 0.5rem;
    }

    .search-original-price {
        text-decoration: line-through;
        color: #9ca3af;
        font-size: 0.9rem;
        margin-left: 0.5rem;
        font-weight: 500;
    }

    .search-empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .search-empty-state i {
        font-size: 5rem;
        color: #d1d5db;
        margin-bottom: 1.5rem;
    }

    .search-empty-state h4 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #374151;
        margin-bottom: 0.75rem;
    }

    .search-empty-state p {
        color: #6b7280;
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    @@media (max-width: 768px) {
        .search-product-grid {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 1rem;
        }

        .search-image-wrapper {
            height: 200px;
        }

        .search-title {
            font-size: 1.5rem;
        }

        .search-header {
            padding: 2rem 0;
        }
    }
</style>

<div class="search-header">
    <div class="container">
        <h1 class="search-title">@(isBangla ? "সার্চ রেজাল্ট" : "Search Results")</h1>
        @if (!string.IsNullOrWhiteSpace(ViewBag.SearchQuery))
        {
            <p class="search-query mb-0">
                @(isBangla ? "সার্চ হয়েছে:" : "Showing") <strong>@ViewBag.ResultCount</strong> @(isBangla ? "টি পণ্য" : "results for") <strong>"@ViewBag.SearchQuery"</strong>
            </p>
        }
        else
        {
            <p class="search-query mb-0">
                @(isBangla ? "সব পণ্য দেখাচ্ছে" : "Showing all products") - <strong>@ViewBag.ResultCount</strong> @(isBangla ? "টি পণ্য পাওয়া গেছে" : "results found")
            </p>
        }
    </div>
</div>

<div class="container my-4">
    @if (!Model.Any())
    {
        <div class="search-empty-state">
            <i class="bi bi-search"></i>
            <h4>@(isBangla ? "কোন প্রোডাক্ট পাওয়া যায়নি" : "No products found")</h4>
            <p>@(isBangla ? "অন্য কীওয়ার্ড দিয়ে চেষ্টা করুন অথবা ক্যাটাগরি ব্রাউজ করুন।" : "Try a different keyword or browse our categories.")</p>
            <a href="/" class="btn btn-primary btn-lg px-4">@(isBangla ? "সব প্রোডাক্ট দেখুন" : "Browse Products")</a>
        </div>
    }
    else
    {
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3 g-lg-4">
            @foreach (var product in Model)
            {
                var firstImage = product.Images?.FirstOrDefault()?.Url ?? "https://via.placeholder.com/300x300?text=No+Image";
                var discountPercent = product.DiscountPercent ?? 0;
                var discountedPrice = product.BasePrice * (1 - discountPercent / 100);

                <div class="col">
                    <div class="search-product-card" onclick="window.location.href='/home/product/@product.Id'">
                    <div class="search-image-wrapper">
                        <img src="@firstImage" alt="@product.Title" class="search-image" loading="lazy">
                        
                        @if (discountPercent > 0)
                        {
                            <span class="search-discount-badge">
                                <i class="bi bi-lightning-fill"></i> -@discountPercent%
                            </span>
                        }
                    </div>
                    
                    <div class="search-product-info">
                        <div class="search-product-title">@product.Title</div>
                        <div>
                            <span class="search-product-price">৳ @discountedPrice.ToString("N0")</span>
                            @if (discountPercent > 0)
                            {
                                <span class="search-original-price">৳ @product.BasePrice.ToString("N0")</span>
                            }
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">
                                <i class="bi bi-star-fill text-warning"></i> @(product.AverageRating > 0 ? product.AverageRating.ToString("F1") : "4.5")
                                <span class="ms-2 text-success">
                                    <i class="bi bi-truck"></i> @(isBangla ? "ফ্রি ডেলিভারি" : "Free Delivery")
                                </span>
                            </small>
                        </div>
                    </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
