@model Sparkle.Api.Controllers.CheckoutController.DeliveryStepViewModel
@{
    ViewData["Title"] = "Delivery Method - Checkout";
    var langCookie = Context.Request.Cookies["sparkle-lang"] == "bn" ? "bn" : "en";
    var isBangla = langCookie == "bn";
}

<style>
    .checkout-page { padding: 2rem 0; background: #f8f9fa; min-height: calc(100vh - 400px); }
    .checkout-steps { display: flex; justify-content: center; margin-bottom: 2rem; }
    .step { flex: 1; max-width: 200px; text-align: center; position: relative; }
    .step-circle { width: 40px; height: 40px; border-radius: 50%; background: #ddd; color: #666; display: flex; align-items: center; justify-content: center; margin: 0 auto 0.5rem; font-weight: 700; }
    .step.active .step-circle { background: #ff6a00; color: white; }
    .step.completed .step-circle { background: #28a745; color: white; }
    .step-label { font-size: 0.9rem; color: #666; }
    .step.active .step-label { color: #ff6a00; font-weight: 600; }
    .address-card { background: white; padding: 1.5rem; border-radius: 8px; border: 2px solid #ddd; cursor: pointer; margin-bottom: 1rem; transition: all 0.2s; }
    .address-card:hover { border-color: #ff6a00; transform: scale(1.02); }
    .checkout-nav { display: flex; justify-content: space-between; gap: 1rem; margin-top: 1.5rem; }
    .btn-back { background: white; color: #666; padding: 0.75rem 2rem; border: 2px solid #e0e0e0; border-radius: 8px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s; }
    .btn-back:hover { border-color: #ff6a00; color: #ff6a00; transform: translateX(-3px); }
</style>

<div class="checkout-page">
    <div class="container">
        <div class="checkout-steps">
            <div class="step completed"><div class="step-circle"><i class="bi bi-check"></i></div><div class="step-label">@(isBangla ? "শিপিং" : "Shipping")</div></div>
            <div class="step active"><div class="step-circle">2</div><div class="step-label">@(isBangla ? "ডেলিভারি" : "Delivery")</div></div>
            <div class="step"><div class="step-circle">3</div><div class="step-label">@(isBangla ? "পেমেন্ট" : "Payment")</div></div>
            <div class="step"><div class="step-circle">4</div><div class="step-label">@(isBangla ? "রিভিউ" : "Review")</div></div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <h2 class="sparkle-section-title mb-4">@(isBangla ? "ডেলিভারি পদ্ধতি নির্বাচন করুন" : "Select Delivery Method")</h2>
                <form method="post" action="/checkout/delivery">
                    <div class="address-card" onclick="selectDelivery('standard', 60)">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5><i class="bi bi-truck"></i> Standard Delivery</h5>
                                <p class="text-muted mb-0">Delivery in 3-5 business days</p>
                            </div>
                            <h4 class="text-primary">৳60</h4>
                        </div>
                    </div>
                    <div class="address-card" onclick="selectDelivery('express', 150)">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5><i class="bi bi-lightning-fill"></i> Express Delivery</h5>
                                <p class="text-muted mb-0">Delivery in 1-2 business days</p>
                            </div>
                            <h4 class="text-primary">৳150</h4>
                        </div>
                    </div>
                    <div class="address-card" onclick="selectDelivery('sameday', 250)">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5><i class="bi bi-clock-fill"></i> Same Day Delivery</h5>
                                <p class="text-muted mb-0">Delivery within 24 hours (Dhaka only)</p>
                            </div>
                            <h4 class="text-primary">৳250</h4>
                        </div>
                    </div>
                    <input type="hidden" name="deliveryMethod" id="deliveryMethodInput">
                    <input type="hidden" name="shippingFee" id="shippingFeeInput">
                    <div class="checkout-nav">
                        <a href="/checkout/address" class="btn-back"><i class="bi bi-arrow-left"></i> @(isBangla ? "শিপিং" : "Back to Address")</a>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5>@(isBangla ? "অর্ডার সারাংশ" : "Order Summary")</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span>৳ @Model.Subtotal.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span id="shippingDisplay">Select method</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total</strong>
                            <strong class="text-primary" id="totalDisplay">৳ @Model.Subtotal.ToString("N2")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function selectDelivery(method, fee) {
        document.getElementById('deliveryMethodInput').value = method;
        document.getElementById('shippingFeeInput').value = fee;
        document.getElementById('shippingDisplay').textContent = `৳${fee.toFixed(2)}`;
        const total = @Model.Subtotal + fee;
        document.getElementById('totalDisplay').textContent = `৳${total.toFixed(2)}`;
        document.querySelector('form').submit();
    }
</script>
