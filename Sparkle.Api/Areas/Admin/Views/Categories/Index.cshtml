@model List<Sparkle.Domain.Catalog.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">Categories</h2>
    <a href="#" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i> Add Category
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Icon</th>
                        <th class="py-3">Name</th>
                        <th class="py-3">Slug</th>
                        <th class="py-3">Display Order</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var category in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi @category.Icon text-primary"></i>
                                    </div>
                                </td>
                                <td class="fw-semibold">@category.Name</td>
                                <td class="text-muted">@category.Slug</td>
                                <td>@category.DisplayOrder</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-tags display-4 mb-3 d-block opacity-50"></i>
                                No categories found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
