@{
    ViewData["Title"] = "Notification Settings";
    Layout = "_SettingsLayout";
}

<h4 class="mb-4">Notifications</h4>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                Customer Notifications
            </div>
            <div class="card-body">
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">Order Confirmation</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">Order Status Changed</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">Order Shipped</label>
                </div>
                 <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">Refund Processed</label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                Admin Notifications
            </div>
            <div class="card-body">
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">New Order Received</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">New User Registration</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">Low Stock Alert</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">New Seller Application</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mb-3">
    <label class="form-label">Sender Email Address</label>
    <input type="email" class="form-control" value="noreply@sparkle.com">
</div>

<button class="btn btn-primary">Save Settings</button>
