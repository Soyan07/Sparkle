@model Sparkle.Api.Areas.Admin.Controllers.ShippingSettingsViewModel
@{
    ViewData["Title"] = "Shipping Settings";
    Layout = "_SettingsLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Shipping Zones & Rates</h4>
    <button class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i> Add Zone
    </button>
</div>

<div class="card mb-4">
    <div class="card-header bg-light">
        <h6 class="mb-0">Domestic (Bangladesh)</h6>
    </div>
    <div class="list-group list-group-flush">
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-1">Inside Dhaka</h6>
                <small class="text-muted">Standard Delivery: 60 BDT</small>
            </div>
            <button class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <div class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-1">Outside Dhaka</h6>
                <small class="text-muted">Standard Delivery: 120 BDT</small>
            </div>
            <button class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
    </div>
</div>

<h4 class="mb-3 mt-5">Shipping Options</h4>

<form method="post" asp-action="SaveShipping">
    <div class="card border p-4 shadow-sm">
        <div class="form-check mb-3">
            <input asp-for="EnableLocalPickup" class="form-check-input" type="checkbox">
            <label asp-for="EnableLocalPickup" class="form-check-label">
                Enable Local Pickup
            </label>
        </div>

        <div class="form-check mb-3">
            <input asp-for="EnableFreeShipping" class="form-check-input" type="checkbox" data-bs-toggle="collapse" data-bs-target="#freeShippingConfig">
            <label asp-for="EnableFreeShipping" class="form-check-label">
                Enable Free Shipping
            </label>
        </div>

        <div class="collapse @(Model.EnableFreeShipping ? "show" : "")" id="freeShippingConfig">
            <div class="mb-3 ps-4 border-start">
                <label asp-for="FreeShippingThreshold" class="form-label">Free Shipping Threshold Amount (BDT)</label>
                <input asp-for="FreeShippingThreshold" class="form-control w-auto" type="number" />
                <div class="form-text">Orders above this amount will qualify for free shipping.</div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Shipping Options</button>
        </div>
    </div>
</form>
