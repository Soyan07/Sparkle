@model Sparkle.Api.Areas.Admin.Controllers.GeneralSettingsViewModel
@{
    ViewData["Title"] = "General Settings";
    Layout = "_SettingsLayout";
}

<h4 class="mb-4">General Store Settings</h4>

<form method="post" asp-action="SaveGeneral">
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <label asp-for="SiteName" class="form-label">Store Name</label>
            <input asp-for="SiteName" class="form-control" />
            <span asp-validation-for="SiteName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="SupportEmail" class="form-label">Support Email</label>
            <input asp-for="SupportEmail" class="form-control" />
            <span asp-validation-for="SupportEmail" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="SupportPhone" class="form-label">Support Phone</label>
            <input asp-for="SupportPhone" class="form-control" />
            <span asp-validation-for="SupportPhone" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="OfficeAddress" class="form-label">Office Address</label>
            <input asp-for="OfficeAddress" class="form-control" />
            <span asp-validation-for="OfficeAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-4">
        <label asp-for="SiteDescription" class="form-label">Store Description</label>
        <textarea asp-for="SiteDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="SiteDescription" class="text-danger"></span>
    </div>

    <h5 class="mb-3 mt-4">Social Media Links</h5>
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <label asp-for="FacebookUrl" class="form-label">Facebook Page URL</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-facebook"></i></span>
                <input asp-for="FacebookUrl" class="form-control" placeholder="https://facebook.com/yourpage" />
            </div>
            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="InstagramUrl" class="form-label">Instagram Profile URL</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-instagram"></i></span>
                <input asp-for="InstagramUrl" class="form-control" placeholder="https://instagram.com/yourprofile" />
            </div>
            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
    </div>
</form>

