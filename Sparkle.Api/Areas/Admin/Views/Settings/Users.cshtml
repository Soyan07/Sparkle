@{
    ViewData["Title"] = "User Settings";
    Layout = "_SettingsLayout";
}

<h4 class="mb-4">User & Account Settings</h4>

<div class="card mb-4">
    <div class="card-header">
        Registration
    </div>
    <div class="card-body">
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" checked id="usersCanRegister">
            <label class="form-check-label" for="usersCanRegister">
                Anyone can register
            </label>
        </div>
        
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" checked id="requireEmailVerification">
            <label class="form-check-label" for="requireEmailVerification">
                Require email verification
            </label>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        Seller Registration
    </div>
    <div class="card-body">
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="allowSellerRegistration">
            <label class="form-check-label" for="allowSellerRegistration">
                Allow users to apply for seller account
            </label>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Seller Approval</label>
            <select class="form-select">
                <option>Manual Approval Required</option>
                <option>Automatic Approval</option>
            </select>
        </div>
    </div>
</div>

<button class="btn btn-primary">Save Changes</button>
