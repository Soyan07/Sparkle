<div class="admin-dashboard">
    <!-- Header -->
    <div class="dashboard-header">
        <h1>@(isBangla ? "অ্যাডমিন ড্যাশবোর্ড" : "Admin Dashboard")</h1>
        <p class="welcome-text">@(isBangla ? "প্ল্যাটফর্ম পারফরম্যান্স এবং বিশ্লেষণ ওভারভিউ" : "Platform performance and analytics overview")</p>
        <span class="admin-badge">@(isBangla ? "সুপার অ্যাডমিন" : "SUPER ADMIN")</span>
    </div>

    <!-- Alert Boxes -->
    @if (Model.PendingSellers > 0)
    {
        <div class="alert-box warning">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <div>
                <strong>@(isBangla ? "পেন্ডিং সেলার অনুমোদন" : "Pending Seller Approvals")</strong><br />
                @Model.PendingSellers @(isBangla ? "টি নতুন সেলার অনুমোদনের জন্য অপেক্ষমাণ" : "new sellers waiting for approval")
                <a href="/admin/sellers" style="color: inherit; font-weight: 600;">@(isBangla ? "এখনই পর্যালোচনা করুন" : "Review now") →</a>
            </div>
        </div>
    }

    <!-- Main Stats Grid -->
    <div class="stats-grid">
        <!-- Total Users -->
        <div class="stat-card users">
            <div class="stat-icon"><i class="bi bi-people"></i></div>
            <div class="stat-label">@(isBangla ? "মোট ব্যবহারকারী" : "Total Users")</div>
            <div class="stat-value">@Model.TotalUsers</div>
            <div class="stat-change positive"><i class="bi bi-arrow-up"></i> @(isBangla ? "নতুন আজ" : "New today") @Model.NewUsersToday</div>
        </div>

        <!-- Total Sellers -->
        <div class="stat-card sellers">
            <div class="stat-icon"><i class="bi bi-shop-window"></i></div>
            <div class="stat-label">@(isBangla ? "মোট সেলার" : "Total Sellers")</div>
            <div class="stat-value">@Model.TotalSellers</div>
            <div class="stat-change"><i class="bi bi-check-circle"></i> @(isBangla ? "সক্রিয়" : "Active") @Model.ActiveSellers</div>
        </div>

        <!-- Total Products -->
        <div class="stat-card products">
            <div class="stat-icon"><i class="bi bi-box-seam"></i></div>
            <div class="stat-label">@(isBangla ? "মোট পণ্য" : "Total Products")</div>
            <div class="stat-value">@Model.TotalProducts</div>
            <div class="stat-change"><i class="bi bi-check-circle"></i> @(isBangla ? "সক্রিয়" : "Active") @Model.ActiveProducts</div>
        </div>

        <!-- Total Orders -->
        <div class="stat-card orders">
            <div class="stat-icon"><i class="bi bi-cart-check"></i></div>
            <div class="stat-label">@(isBangla ? "মোট অর্ডার" : "Total Orders")</div>
            <div class="stat-value">@Model.TotalOrders</div>
            <div class="stat-change positive"><i class="bi bi-arrow-up"></i> @(isBangla ? "আজ" : "Today") @Model.TodayOrders</div>
        </div>

        <!-- Total Revenue -->
        <div class="stat-card revenue">
            <div class="stat-icon"><i class="bi bi-currency-dollar"></i></div>
            <div class="stat-label">@(isBangla ? "মোট রাজস্ব" : "Total Revenue")</div>
            <div class="stat-value">৳@Model.TotalRevenue.ToString("N0")</div>
            <div class="stat-change positive"><i class="bi bi-arrow-up"></i> @(isBangla ? "মাসে" : "This Month") ৳@Model.MonthRevenue.ToString("N0")</div>
        </div>
    </div>

    <!-- Secondary Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">@(isBangla ? "আজকের রাজস্ব" : "Today's Revenue")</div>
            <div class="stat-value" style="font-size: 1.5rem;">৳@Model.TodayRevenue.ToString("N0")</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">@(isBangla ? "গড় অর্ডার মূল্য" : "Average Order Value")</div>
            <div class="stat-value" style="font-size: 1.5rem;">৳@Model.AverageOrderValue.ToString("N0")</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">@(isBangla ? "অপেক্ষমাণ অর্ডার" : "Pending Orders")</div>
            <div class="stat-value" style="font-size: 1.5rem; color: #fd7e14;">@Model.PendingOrders</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">@(isBangla ? "সম্পন্ন অর্ডার" : "Completed Orders")</div>
            <div class="stat-value" style="font-size: 1.5rem; color: #28a745;">@Model.DeliveredOrders</div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Recent Orders -->
        <div class="content-card">
            <div class="content-card-header">
                <div class="content-card-title">
                    <i class="bi bi-clock-history"></i>
                    @(isBangla ? "সাম্প্রতিক অর্ডার" : "Recent Orders")
                </div>
                <a href="/order/history" class="content-card-action">@(isBangla ? "সবগুলো দেখুন" : "View All") →</a>
            </div>
            
            @if (Model.RecentOrders.Any())
            {
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>@(isBangla ? "অর্ডার আইডি" : "Order ID")</th>
                            <th>@(isBangla ? "গ্রাহক" : "Customer")</th>
                            <th>@(isBangla ? "তারিখ" : "Date")</th>
                            <th>@(isBangla ? "মোট" : "Total")</th>
                            <th>@(isBangla ? "স্ট্যাটাস" : "Status")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td><span class="order-id">#@order.OrderId</span></td>
                                <td>@order.CustomerName</td>
                                <td>@order.Date.ToString("MMM dd, yyyy")</td>
                                <td><strong>৳@order.Total.ToString("N0")</strong></td>
                                <td><span class="status-badge @order.Status.ToLower()">@order.Status</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <p>@(isBangla ? "কোন অর্ডার নেই" : "No orders yet")</p>
                </div>
            }
        </div>

        <!-- Quick Actions & Top Vendors -->
        <div>
            <!-- Quick Actions -->
            <div class="content-card" style="margin-bottom: 1.5rem;">
                <div class="content-card-header">
                    <div class="content-card-title">
                        <i class="bi bi-lightning"></i>
                        @(isBangla ? "দ্রুত কাজ" : "Quick Actions")
                    </div>
                </div>
                <div class="quick-actions">
                    <a href="/Admin/Sellers" class="quick-action-btn">
                        <i class="bi bi-shop-window"></i>
                        <span>@(isBangla ? "সেলার পরিচালনা" : "Manage Sellers")</span>
                    </a>
                    <a href="/Admin/Products" class="quick-action-btn">
                        <i class="bi bi-box-seam"></i>
                        <span>@(isBangla ? "পণ্য পরিচালনা" : "Manage Products")</span>
                    </a>
                    <a href="/Admin/Orders" class="quick-action-btn">
                        <i class="bi bi-cart-check"></i>
                        <span>@(isBangla ? "অর্ডার দেখুন" : "View Orders")</span>
                    </a>
                    <a href="/Admin/Users" class="quick-action-btn">
                        <i class="bi bi-people"></i>
                        <span>@(isBangla ? "ব্যবহারকারী পরিচালনা" : "Manage Users")</span>
                    </a>
                    <a href="/Admin/Categories" class="quick-action-btn">
                        <i class="bi bi-tag"></i>
                        <span>@(isBangla ? "ক্যাটাগরি" : "Categories")</span>
                    </a>
                    <a href="/Admin/Settings" class="quick-action-btn">
                        <i class="bi bi-gear"></i>
                        <span>@(isBangla ? "সেটিংস" : "Settings")</span>
                    </a>
                </div>
            </div>

            <!-- Top Sellers -->
            <div class="content-card">
                <div class="content-card-header">
                    <div class="content-card-title">
                        <i class="bi bi-trophy"></i>
                        @(isBangla ? "সেরা সেলার" : "Top Sellers")
                    </div>
                </div>
                
                @if (Model.TopSellers.Any())
                {
                    <div>
                        @foreach (var seller in Model.TopSellers)
                        {
                            <div class="progress-item">
                                <div class="progress-label">
                                    <span class="progress-label-name">@seller.ShopName</span>
                                    <span class="progress-label-value">৳@seller.TotalRevenue.ToString("N0")</span>
                                </div>
                                <div class="progress-bar-wrapper">
                                    <div class="progress-bar-fill" style="width: @((seller.TotalRevenue / Model.TopSellers.Max(v => v.TotalRevenue) * 100))%"></div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-shop"></i>
                        <p>@(isBangla ? "এখনো কোন ভেন্ডর নেই" : "No vendors yet")</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Order Statistics -->
    <div class="content-card">
        <div class="content-card-header">
            <div class="content-card-title">
                <i class="bi bi-graph-up"></i>
                @(isBangla ? "অর্ডার পরিসংখ্যান" : "Order Statistics")
            </div>
        </div>
        <div class="stats-grid" style="margin-bottom: 0;">
            <div>
                <div class="progress-item">
                    <div class="progress-label">
                        <span class="progress-label-name">@(isBangla ? "অপেক্ষমাণ" : "Pending")</span>
                        <span class="progress-label-value">@Model.PendingOrders / @Model.TotalOrders</span>
                    </div>
                    <div class="progress-bar-wrapper">
                        <div class="progress-bar-fill" style="width: @((Model.TotalOrders > 0 ? (double)Model.PendingOrders / Model.TotalOrders * 100 : 0))%; background: linear-gradient(90deg, #fd7e14, #ff9f40);"></div>
                    </div>
                </div>
            </div>
            <div>
                <div class="progress-item">
                    <div class="progress-label">
                        <span class="progress-label-name">@(isBangla ? "প্রক্রিয়াকরণ" : "Processing")</span>
                        <span class="progress-label-value">@Model.ProcessingOrders / @Model.TotalOrders</span>
                    </div>
                    <div class="progress-bar-wrapper">
                        <div class="progress-bar-fill" style="width: @((Model.TotalOrders > 0 ? (double)Model.ProcessingOrders / Model.TotalOrders * 100 : 0))%; background: linear-gradient(90deg, #17a2b8, #46c5d9);"></div>
                    </div>
                </div>
            </div>
            <div>
                <div class="progress-item">
                    <div class="progress-label">
                        <span class="progress-label-name">@(isBangla ? "সম্পন্ন" : "Delivered")</span>
                        <span class="progress-label-value">@Model.DeliveredOrders / @Model.TotalOrders</span>
                    </div>
                    <div class="progress-bar-wrapper">
                        <div class="progress-bar-fill" style="width: @((Model.TotalOrders > 0 ? (double)Model.DeliveredOrders / Model.TotalOrders * 100 : 0))%; background: linear-gradient(90deg, #28a745, #5cb85c);"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Highlights -->
    @if (Model.CategoryHighlights.Any())
    {
        <div class="content-card" style="margin-top: 1.5rem;">
            <div class="content-card-header">
                <div class="content-card-title">
                    <i class="bi bi-grid-3x3-gap"></i>
                    @(isBangla ? "বিশেষ ক্যাটাগরি" : "Featured Categories")
                </div>
                <a href="/" class="content-card-action">@(isBangla ? "সবগুলো দেখুন" : "View All") →</a>
            </div>
            
            <div class="category-cards" id="categoryGrid">
                @for (int i = 0; i < Model.CategoryHighlights.Count; i++)
                {
                    var cat = Model.CategoryHighlights[i];
                    var isHidden = i >= 12 ? "category-hidden" : "";
                    <div class="category-highlight-card @cat.Highlight.Slug @isHidden">
                        <div class="category-highlight-header">
                            <div class="category-highlight-icon @cat.Highlight.AccentClass">
                                <i class="bi @cat.Highlight.Icon"></i>
                            </div>
                            <div class="category-highlight-info">
                                <div class="category-highlight-title">@cat.Highlight.Title</div>
                                <div class="category-highlight-count">
                                    @cat.ProductCount @(isBangla ? "টি পণ্য" : cat.ProductCount == 1 ? "Product" : "Products")
                                </div>
                            </div>
                        </div>
                        <p class="category-highlight-desc">@cat.Highlight.Description</p>
                        <ul class="category-highlight-bullets">
                            @foreach (var point in cat.Highlight.BulletPoints)
                            {
                                <li>@point</li>
                            }
                        </ul>
                    </div>
                }
            </div>
            
            @if (Model.CategoryHighlights.Count > 12)
            {
                <div class="text-center mt-4">
                    <button id="seeMoreBtn" class="btn btn-outline-primary" onclick="toggleCategories()">
                        <i class="bi bi-chevron-down"></i> @(isBangla ? "আরও দেখুন" : "See More")
                    </button>
                </div>
            }
            
            <script>
                let isExpanded = false;
                
                function toggleCategories() {
                    const allCards = document.querySelectorAll('.category-highlight-card');
                    const hiddenCards = Array.from(allCards).slice(12); // Get cards from index 12 onwards
                    const btn = document.getElementById('seeMoreBtn');
                    
                    if (!isExpanded) {
                        // Show hidden cards (cards 13-24)
                        hiddenCards.forEach(card => {
                            card.classList.remove('category-hidden');
                        });
                        btn.innerHTML = '<i class="bi bi-chevron-up"></i> @(isBangla ? "কম দেখুন" : "See Less")';
                        isExpanded = true;
                    } else {
                        // Hide cards again (show only first 12)
                        hiddenCards.forEach(card => {
                            card.classList.add('category-hidden');
                        });
                        btn.innerHTML = '<i class="bi bi-chevron-down"></i> @(isBangla ? "আরও দেখুন" : "See More")';
                        isExpanded = false;
                    }
                }
            </script>
        </div>
    }
</div>
