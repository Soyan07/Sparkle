    .category-highlight-card.photography-camera .category-highlight-icon { background: linear-gradient(135deg, #cfe2ff, #9ec5fe); }
    .category-highlight-card.photography-camera .category-highlight-bullets li:before { color: #0d6efd; }
    .category-highlight-card.art-crafts .category-highlight-icon { background: linear-gradient(135deg, #cff4fc, #9eeaf9); }
    .category-highlight-card.art-crafts .category-highlight-bullets li:before { color: #0dcaf0; }
    .category-highlight-card.musical-instruments .category-highlight-icon { background: linear-gradient(135deg, #fff3cd, #ffe69c); }
    .category-highlight-card.musical-instruments .category-highlight-bullets li:before { color: #ffc107; }
    .category-highlight-card.garden-outdoor .category-highlight-icon { background: linear-gradient(135deg, #d4edda, #a8e6a3); }
    .category-highlight-card.garden-outdoor .category-highlight-bullets li:before { color: #28a745; }
    .category-highlight-card.travel-luggage .category-highlight-icon { background: linear-gradient(135deg, #cfe2ff, #9ec5fe); }
    .category-highlight-card.travel-luggage .category-highlight-bullets li:before { color: #0d6efd; }
    .category-highlight-card.fitness-gym .category-highlight-icon { background: linear-gradient(135deg, #f8d7da, #f1aeb5); }
    .category-highlight-card.fitness-gym .category-highlight-bullets li:before { color: #dc3545; }
    
    /* Responsive */
    @@media (max-width: 1400px) {
        .category-cards { grid-template-columns: repeat(5, minmax(200px, 1fr)); }
    }
    
    @@media (max-width: 1200px) {
        .category-cards { grid-template-columns: repeat(4, minmax(200px, 1fr)); }
    }
    
    @@media (max-width: 992px) {
        .content-grid { grid-template-columns: 1fr; }
        .stats-grid { grid-template-columns: repeat(2, 1fr); }
        .category-cards { grid-template-columns: repeat(3, minmax(200px, 1fr)); }
    }
    
    @@media (max-width: 768px) {
        .category-cards { grid-template-columns: repeat(2, minmax(180px, 1fr)); }
        .category-highlight-card { min-height: 180px; }
